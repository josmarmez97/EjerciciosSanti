<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <RootNamespace>AngularJSWebAPIwithMVC6CaptchaExample</RootNamespace>
    <AssemblyName>AngularJSWebAPIwithMVC6CaptchaExample</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="botdetect.xml">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Include="wwwroot\node_modules\angularjs-captcha\bower.json" />
    <Content Include="wwwroot\node_modules\angularjs-captcha\package.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.9" />
  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Tools" Version="2.0.4" />
  </ItemGroup>

  <ItemGroup>
    <None Include="wwwroot\node_modules\angularjs-captcha\.gitignore" />
    <None Include="wwwroot\node_modules\angularjs-captcha\.npmignore" />
    <None Include="wwwroot\node_modules\angularjs-captcha\dist\angularjs-captcha.min.js" />
    <None Include="wwwroot\node_modules\angularjs-captcha\dist\angularjs-captcha.min.js.map" />
    <None Include="wwwroot\node_modules\angularjs-captcha\Gruntfile.js" />
    <None Include="wwwroot\node_modules\angularjs-captcha\npmjs_readme.markd" />
    <None Include="wwwroot\node_modules\angularjs-captcha\README.md" />
    <None Include="wwwroot\node_modules\angularjs-captcha\src\angularjs-captcha.js" />
    <None Include="wwwroot\node_modules\angularjs\angular-route.min.js" />
    <None Include="wwwroot\node_modules\angularjs\angular.min.js" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Captcha" Version="4.4.2" />
  </ItemGroup>

</Project>
