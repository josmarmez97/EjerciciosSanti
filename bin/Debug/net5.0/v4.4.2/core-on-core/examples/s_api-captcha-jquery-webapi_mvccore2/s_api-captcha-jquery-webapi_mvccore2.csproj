<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <RootNamespace>jQueryWebAPIwithMVC6CaptchaExample</RootNamespace>
    <AssemblyName>jQueryWebAPIwithMVC6CaptchaExample</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="botdetect.xml">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Include="wwwroot\node_modules\jquery-captcha\bower.json" />
    <Content Include="wwwroot\node_modules\jquery-captcha\package.json" />
    <Content Include="wwwroot\node_modules\jquery\jquery.min.js" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.9" />
  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Tools" Version="2.0.4" />
  </ItemGroup>

  <ItemGroup>
    <None Include="wwwroot\node_modules\jquery-captcha\.gitignore" />
    <None Include="wwwroot\node_modules\jquery-captcha\.npmignore" />
    <None Include="wwwroot\node_modules\jquery-captcha\dist\jquery-captcha.min.js" />
    <None Include="wwwroot\node_modules\jquery-captcha\dist\jquery-captcha.min.js.map" />
    <None Include="wwwroot\node_modules\jquery-captcha\Gruntfile.js" />
    <None Include="wwwroot\node_modules\jquery-captcha\npmjs_readme.markd" />
    <None Include="wwwroot\node_modules\jquery-captcha\README.md" />
    <None Include="wwwroot\node_modules\jquery-captcha\src\jquery-captcha.js" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Captcha" Version="4.4.2" />
  </ItemGroup>

</Project>
